---
export interface Props extends HTMLVideoElement {
  type?: string;
  class?: string;
}

const {
  src,
  title = "Video title",
  class: className,
  playsinline = true,
  webkitPlaysinline = true,
  muted = true,
  loop = true,
}: Props = Astro.props;

const blogassetsDir = "/assets/blog/";
---

<video
  class={className}
  muted={muted}
  loop={loop}
  playsinline={playsinline}
  src={blogassetsDir + src}
  title={title}
  class={className}
  webkitPlaysinline={webkitPlaysinline}
  {...Astro.props}></video>
