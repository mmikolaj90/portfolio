---
import BaseVideo, { Props as VideoProps } from "./BaseVideo.astro";
import BaseBlogGridTile, {
  Props as BaseBlogGridTileProps,
} from "./BaseBlogGridTile.astro";

interface Props extends BaseBlogGridTileProps, VideoProps {
  index?: number;
}

const { gridPosition, index, aspectRatio, ...rest } = Astro.props;
---

<BaseBlogGridTile
  gridPosition={gridPosition}
  index={index}
  aspectRatio={aspectRatio}
>
  <BaseVideo {...rest} muted loop data-play-on-visible />
</BaseBlogGridTile>
