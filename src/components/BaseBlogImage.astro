---
import type { Props as BaseBlogGridTileProps } from "./BaseBlogGridTile.astro";
import BaseBlogGridTile from "./BaseBlogGridTile.astro";
import { Image } from "astro:assets";

interface Props extends BaseBlogGridTileProps {
  src?: unknown;
  alt?: string;
}

const { gridPosition, alt, src, index, aspectRatio } = Astro.props;

const blogassetsDir = "/assets/blog/";
---

<BaseBlogGridTile gridPosition={gridPosition} index={index} aspectRatio={aspectRatio}>
  <Image src={blogassetsDir + src} alt={alt ?? ""} width={500} height={500} />
</BaseBlogGridTile>
